
@model  MasterDetails.Models.PurchaseDetailsViewModel
@using MasterDetails.Models;

@{
    ViewBag.Title = "Index";
    List<TipoProducto> TipoProducto = (List<TipoProducto>)ViewData["TiposProducto"];

    //ViewData = model
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">

                <div class="panel-heading">
                    <div class="panel-title">Purchase Header</div>
                </div>

                <div class="panel-body">

                    <div class="row">

                        <div class="col-md-6">

                            <div class="form-group row">
                                @Html.LabelFor(m => m.Header.CustomerName, "Customer Name", new { @Class = "control-label col-md-4" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Header.CustomerName, null, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(m => m.Header.CustomerContactNo, "Contact No", new { @Class = "control-label col-md-4" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Header.CustomerContactNo, null, new { @class = "form-control"  })
                                </div>
                            </div>


                        </div>

                        <div class="col-md-6">

                            <div class="form-group row">
                               <input type="hidden" name="txtOrderId" id="txtOrderId" aria-describedby="basic-addon2" value="5">
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Header.PurchaseDate, "PurchaseDate", new { @Class = "control-label col-md-4" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Header.PurchaseDate, null, new { @class = "form-control", disabled = "disabled" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(m => m.Header.Description, "Description", new { @Class = "control-label col-md-4" })
                                <div class="col-md-4">
                                    @Html.TextAreaFor(m => m.Header.Description, new { @class = "form-control", row = 3 })
                                </div>
                            </div>



                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>


    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">

                <div class="panel-heading">
                    <div class="panel-title">Purchase Details</div>
                </div>

                <div class="panel-body">

                    <div class="form-group row">
                          @Html.Label("ItemName", "Item Name", new { @Class = "control-label col-md-4" })
                          <div class="col-md-4">
                            @Html.TextBox("ItemName", null, new { @class = "form-control" })
                          </div>
                        </div>
                    <div class="form-group row">
                        @Html.Label("ItemQty", "Seleccione", new { @Class = "control-label col-md-4" })

                        <div class="col-md-4">
                            <select id="testSelect" class="form-control">

                                    @foreach (var item in TipoProducto)
                                    {

                                        <option value="item.TipoProductoId.ToString()">@item.Name.ToString()</option>

                                        @*@Html.DropDownListFor(x => Model.SelectedRegionCode, new SelectList(Model.Regions, "Value", "Text"), htmlAttributes: new { @class = "form-control", @id = "Region" })
                                        @Html.ValidationMessageFor(x => x.SelectedRegionCode, "", new { @class = "text-danger" })*@

                                    }

                            </select>

                          @*  @Html.DropDownListFor(x => Model.PurchaseDate, new SelectList(Model.Description, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })*@
                        </div>
                    </div>


                    <div class="form-group row">
                        @Html.Label("ItemQty", "Item Qty", new { @Class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("ItemQty", null, new { @class = "form-control" })
                        </div>
                    </div>



                    <div class="form-group row">
                        @Html.Label("ItemPrice", "Item Price", new { @Class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.TextBox("ItemPrice", null, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-4 col-md-offset-4">
                        <input type="button" name="name" id="AddButton" value="Add" class="btn btn-info" />
                    </div>

                </div>

            </div>
        </div>
    </div>


    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">

                <div class="panel-heading">
                    <div class="panel-title">Added Details items</div>
                </div>

                <div class="panel-body">

                    @*<table class=" table-bordered  table-hover table-striped table-responsive">*@

                    @*@Html.Partial("_PurchaseDetailsTable1")*@

                    @*@Html.Partial("_PurchaseDetailsTable", PurchaseDetailsViewModel)*@

                    @*@Html.RenderPartial("_PurchaseDetailsTable",@model )*@

                    @*@Html.RenderPartial("_PurchaseDetailsTable" Model.Detail)*@

                    <!--  <tbody id="PurchaseDetailsTable"></tbody> -->
                    @*</table>*@

                    <table class=" table-bordered  table-hover table-striped table-responsive">
                        <thead>
                            <tr>
                                <td style='display:none'><input type="hidden" id="ItemId" name="ItemId" value="ItemId" /></td>
                                <td>Sl</td>
                                <td>Item Name</td>
                                <td>Qty</td>
                                <td>Price</td>
                                <td>Accion</td>
                            </tr>
                        </thead>

                        <tbody id="PurchaseDetailsTable">

                         

                        </tbody>

                    </table>

                </div>

            </div>
        </div>
    </div>


    <div class="col-md-4 col-md-offset-4">

        <input type="submit" name="name" value="save" class="btn btn-success" />

    </div>


}

@section scripts
{


    <script src="~/Scripts/ProyectScripts/Purchase/PurchaseEdit.js"></script>

}